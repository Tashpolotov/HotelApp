<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/yellow1"

        >


        <ImageView
            android:id="@+id/img_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_star_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            app:layout_constraintTop_toTopOf="@id/img_star"
            app:layout_constraintStart_toEndOf="@id/img_star"
            app:layout_constraintBottom_toBottomOf="@id/img_star"
            android:layout_marginStart="30dp"
            android:textColor="@color/yellow"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:id="@+id/tv_rating_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_rating"
            android:text="оценка типа хорошо прекрасно и так далее"
            android:layout_marginStart="70dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="@id/tv_rating"
            android:textColor="@color/yellow"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="20dp"

            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card1"
        android:text="оценка типа хорошо прекрасно и так далее"
        app:layout_constraintTop_toBottomOf="@id/card1"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/tv_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/card1"
        android:text="оценка типа хорошо прекрасно и так далее"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:textColor="@color/blue"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/tv_departure"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Вылет из"
        app:layout_constraintTop_toBottomOf="@id/tv_adress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/tv_departure_city"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Вылет из"
        app:layout_constraintTop_toTopOf="@id/tv_departure"
        app:layout_constraintStart_toEndOf="@id/tv_departure"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"

        />


    <TextView
        android:id="@+id/tv_text_city"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Страна и город"
        app:layout_constraintTop_toBottomOf="@id/tv_departure"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/tv_arrival_city"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Вылет из"
        app:layout_constraintTop_toTopOf="@id/tv_text_city"
        app:layout_constraintStart_toEndOf="@id/tv_text_city"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_text_date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Даты"
        app:layout_constraintTop_toBottomOf="@id/tv_arrival_city"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Вылет из"
        app:layout_constraintTop_toTopOf="@id/tv_text_date"
        app:layout_constraintStart_toEndOf="@id/tv_text_date"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        />


    <TextView
        android:id="@+id/tv_text_night"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Кол-во ночей"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/tv_much_night"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Вылет из"
        app:layout_constraintTop_toTopOf="@id/tv_text_night"
        app:layout_constraintStart_toEndOf="@id/tv_text_night"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        />


    <TextView
        android:id="@+id/tv_text_hotel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Отель"
        app:layout_constraintTop_toBottomOf="@id/tv_much_night"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/tv_name_hotel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Вылет из"
        app:layout_constraintTop_toTopOf="@id/tv_text_hotel"
        app:layout_constraintStart_toEndOf="@id/tv_text_hotel"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_text_room"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Номер"
        app:layout_constraintTop_toBottomOf="@id/tv_name_hotel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/tv_room"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Вылет из"
        app:layout_constraintTop_toTopOf="@id/tv_text_room"
        app:layout_constraintStart_toEndOf="@id/tv_text_room"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_text_food"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Питание"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_room" />

    <TextView
        android:id="@+id/tv_food"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Вылет из"
        app:layout_constraintTop_toTopOf="@id/tv_text_food"
        app:layout_constraintStart_toEndOf="@id/tv_text_food"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        />



</androidx.constraintlayout.widget.ConstraintLayout>