<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:id="@+id/tv_first_tourist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Первый турист"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="4dp"
        android:backgroundTint="@color/gray"
        >



        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/vector_55"
            android:layout_gravity="center"

            />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_first_tourist"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/shape_et"
            android:layout_marginTop="10dp"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:paddingStart="14dp"
                android:text="Имя"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:visibility="visible"
                />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:background="@drawable/shape_et"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:paddingStart="14dp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_second_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/shape_et"
            android:layout_marginTop="10dp"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:paddingStart="14dp"
                android:text="Фамилия"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:visibility="visible"
                />

            <EditText
                android:id="@+id/et_second_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:background="@drawable/shape_et"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:paddingStart="14dp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/shape_et"
            android:layout_marginTop="10dp"
            android:layout_margin="4dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top"
                android:background="@drawable/shape_et"
                android:inputType="date"
                android:hint="Дата рождения"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                android:paddingStart="14dp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/shape_et"
            android:layout_marginTop="10dp"
            android:layout_margin="4dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_country"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top"
                android:background="@drawable/shape_et"
                android:textSize="14sp"
                android:hint="Гражданство"
                android:textColorHint="@color/black"
                android:paddingStart="14dp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_passport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/shape_et"
            android:layout_marginTop="10dp"
            android:layout_margin="4dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_passport"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top"
                android:background="@drawable/shape_et"
                android:textSize="14sp"
                android:hint="Номер загранпаспорта"
                android:textColorHint="@color/black"
                android:paddingStart="14dp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_passport_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/shape_et"
            android:layout_marginTop="10dp"
            android:layout_margin="4dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_passport_end"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top"
                android:hint="Срок действия загранпаспорта"
                android:textColorHint="@color/black"
                android:background="@drawable/shape_et"
                android:textSize="14sp"
                android:paddingStart="14dp"

                />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>